<Window x:Class="PiskaPerepiska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PiskaPerepiska"
        mc:Ignorable="d"
        Title="Authorization" Height="300" Width="470">
    <Grid Background="#494949">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="textBox" VerticalAlignment="Bottom" Margin="80,0"
                 Style="{DynamicResource CustomLoginTextBox}"  FontSize="13" 
                 Background="White"/>

        <StackPanel Orientation="Horizontal" Margin="0 20 0 0" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1">
            <Button x:Name="logsBtn" Width="100" Height="30" Margin="0 0 10 0"
                    Style="{DynamicResource CustomButtonStyle}" Cursor="Hand" 
                    Content="Host" FontFamily="Malgun Gothic Semilight"/>
            <Button x:Name="exitBtn" Width="100" Height="30" Style="{DynamicResource CustomButtonStyle}" Cursor="Hand" FontFamily="Malgun Gothic Semilight" 
                    Content="User" Click="exitBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>